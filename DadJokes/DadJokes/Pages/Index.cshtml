@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style> 
#background {
   position: absolute;
   top: 0;
   left: 0;
   bottom: 0;
   right: 0;
   z-index: -1;
   overflow: hidden;
   background:linear-gradient(transparent 150px, white);
    }
}
</style>

<div id="background">
    @{
        foreach (var item in DadJokeManager.DadJokes)
        {
            <p>
            @item.joke
            </p>
        }
    }
</div>
<div class="row">
    <div class="col-md-8">
    </div>
    <div class="col-md-3">
        <h1 class="display-4">@Model.Joke</h1> 
    </div>
</div>